<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Philbrick" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/white</item>
        <item name="colorOnPrimary">@color/white</item>

        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/primary</item>
        <item name="colorSecondaryVariant">@color/primary</item>
        <item name="colorOnSecondary">@color/black</item>


        <!-- Customize your theme here. -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

        <item name="android:textColorPrimary">@color/black</item>
        <item name="android:textColorSecondary">@color/black</item>

        <!-- Customize your theme here. -->

        <!-- Customize your theme here. -->
        <item name="android:statusBarColor">@color/primary</item>
        <item name="android:windowBackground">@drawable/img_window_bg</item>
    </style>

    <style name="SplashStyle" parent="Theme.Philbrick">
        <item name="android:windowBackground">@drawable/img_splash</item>
    </style>

    <style name="Theme.Philbrick.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="colorPrimary">@color/black</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="Theme.Philbrick.PopupOverlay" parent="ThemeOverlay.AppCompat.Light">
        <item name="colorPrimary">@color/black</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="TextView">
        <item name="android:fontFamily">@font/poppins</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/text_color</item>
        <item name="android:padding">@dimen/small_padding</item>
    </style>

    <style name="Button">
        <item name="android:fontFamily">@font/poppins</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="Button.Primary">
        <item name="android:fontFamily">@font/poppins_bold</item>
        <item name="android:textSize">16sp</item>
        <item name="textAllCaps">false</item>
     <!--   <item name="android:background">@drawable/draw_bg_primary_button</item>-->
        <item name="android:background">@drawable/custom_button_primary</item>
    </style>

    <style name="Label">
        <item name="fontFamily">@font/poppins_bold</item>
        <item name="android:textSize">13sp</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:textColor">@color/text_color</item>
    </style>

    <style name="Title">
        <item name="fontFamily">@font/poppins_semibold</item>
        <item name="android:textSize">18sp</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:textColor">@color/color_privacy_policy</item>
    </style>


    <style name="EditText">
        <item name="android:textColorHint">@color/hint_text_color</item>
    </style>

    <style name="Theme.Philbrick.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="NavToolbar">
        <item name="android:background">@color/white</item>
    </style>

    <style name="NavHeader">
        <item name="android:background">@drawable/img_menu_logo</item>
    </style>

    <style name="ShapeAppearanceOverlay.App.CornerSize10Percent" parent="">
        <item name="cornerSize">10%</item>
    </style>

    <style name="Progressbar">
        <item name="android:indeterminateTint">@color/primary</item>
    </style>

    <style name="Components.Temper.DialogThemeOverlay" parent="@style/ThemeOverlay.MaterialComponents.MaterialAlertDialog">
        <item name="materialAlertDialogTitleTextStyle">@style/Components.Temper.Dialog.Title</item>
        <item name="textAllCaps">false</item>
    </style>


    <style name="Components.Temper.Dialog.Title" parent="@style/MaterialAlertDialog.MaterialComponents.Title.Text">
        <item name="android:textSize">18sp</item>
    </style>
</resources>